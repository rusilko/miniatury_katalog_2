<% provide :title, @user.name %>

  <aside class="span3">
    <h1>
      <%= gravatar_for @user, {size: 30} %>
      <%= @user.name %>
    </h1>
  </aside>

  <div class="span9">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
      <% end %>
  </div>

